{
  "manifest_version": 3,
  "name": "Котлетка 2025 бот",
  "version": "1.0",
  "description": "Automates tasks on specific website",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": ["https://kotletka.tbank.ru/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
